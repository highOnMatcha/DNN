{
  "pix2pix_models": {
    "lightweight-baseline": {
      "name": "lightweight-baseline",
      "description": "Lightweight baseline for quick experimentation - Fast training with minimal parameters",
      "output_dir": "./models/lightweight_baseline",
      "architecture": "pix2pix",
      "parameters": {
        "generator": {
          "input_channels": 3,
          "output_channels": 4,
          "ngf": 32,
          "n_blocks": 6,
          "norm_layer": "instance",
          "dropout": 0.3
        },
        "discriminator": {
          "input_channels": 7,
          "ndf": 32,
          "n_layers": 2,
          "norm_layer": "instance"
        },
        "image_size": 256,
        "beta1": 0.5,
        "beta2": 0.999,
        "lambda_l1": 150.0
      }
    },
    "sprite-optimized": {
      "name": "sprite-optimized",
      "description": "State-of-the-art configuration optimized specifically for pixel art sprite generation",
      "output_dir": "./models/sprite_optimized",
      "architecture": "pix2pix",
      "parameters": {
        "generator": {
          "input_channels": 3,
          "output_channels": 4,
          "ngf": 64,
          "n_blocks": 9,
          "norm_layer": "instance",
          "dropout": 0.3,
          "use_attention": true
        },
        "discriminator": {
          "input_channels": 7,
          "ndf": 64,
          "n_layers": 3,
          "norm_layer": "instance",
          "use_spectral_norm": true
        },
        "image_size": 256,
        "beta1": 0.5,
        "beta2": 0.999,
        "lambda_l1": 150.0,
        "lambda_perceptual": 0.1,
        "lambda_pixel_art": 10.0
      }
    },
    "transformer-enhanced": {
      "name": "transformer-enhanced",
      "description": "Advanced transformer-enhanced architecture for complex artwork-to-sprite mappings",
      "output_dir": "./models/transformer_enhanced",
      "architecture": "pix2pix_transformer",
      "parameters": {
        "generator": {
          "input_channels": 3,
          "output_channels": 4,
          "ngf": 64,
          "n_blocks": 8,
          "norm_layer": "instance",
          "dropout": 0.2,
          "transformer_layers": 4,
          "attention_heads": 8,
          "use_positional_encoding": true
        },
        "discriminator": {
          "input_channels": 7,
          "ndf": 64,
          "n_layers": 3,
          "norm_layer": "instance",
          "use_spectral_norm": true
        },
        "image_size": 256,
        "beta1": 0.5,
        "beta2": 0.999,
        "lambda_l1": 150.0,
        "lambda_perceptual": 0.15,
        "lambda_attention": 0.05
      }
    }
  },
