{
  "pix2pix_models": {
    "lightweight-baseline": {
      "name": "lightweight-baseline",
      "description": "Lightweight baseline for quick experimentation - Fast training with minimal parameters",
      "output_dir": "./models/lightweight_baseline",
      "architecture": "pix2pix",
      "parameters": {
        "generator": {
          "input_channels": 3,
          "output_channels": 4,
          "ngf": 32,
          "n_blocks": 6,
          "norm_layer": "instance",
          "dropout": 0.3
        },
        "discriminator": {
          "input_channels": 7,
          "ndf": 32,
          "n_layers": 2,
          "norm_layer": "instance"
        },
        "image_size": 256,
        "beta1": 0.5,
        "beta2": 0.999,
        "lambda_l1": 150.0
      }
    },
    "sprite-optimized": {
      "name": "sprite-optimized",
      "description": "State-of-the-art configuration optimized specifically for pixel art sprite generation",
      "output_dir": "./models/sprite_optimized",
      "architecture": "pix2pix",
      "parameters": {
        "generator": {
          "input_channels": 3,
          "output_channels": 4,
          "ngf": 64,
          "n_blocks": 9,
          "norm_layer": "instance",
          "dropout": 0.3,
          "use_attention": true
        },
        "discriminator": {
          "input_channels": 7,
          "ndf": 64,
          "n_layers": 3,
          "norm_layer": "instance",
          "use_spectral_norm": true
        },
        "image_size": 256,
        "beta1": 0.5,
        "beta2": 0.999,
        "lambda_l1": 150.0,
        "lambda_perceptual": 0.1,
        "lambda_pixel_art": 10.0
      }
    },
    "transformer-enhanced": {
      "name": "transformer-enhanced",
      "description": "Advanced transformer-enhanced architecture for complex artwork-to-sprite mappings",
      "output_dir": "./models/transformer_enhanced",
      "architecture": "pix2pix_transformer",
      "parameters": {
        "generator": {
          "input_channels": 3,
          "output_channels": 4,
          "ngf": 64,
          "n_blocks": 8,
          "norm_layer": "instance",
          "dropout": 0.2,
          "transformer_layers": 4,
          "attention_heads": 8,
          "use_positional_encoding": true
        },
        "discriminator": {
          "input_channels": 7,
          "ndf": 64,
          "n_layers": 3,
          "norm_layer": "instance",
          "use_spectral_norm": true
        },
        "image_size": 256,
        "beta1": 0.5,
        "beta2": 0.999,
        "lambda_l1": 150.0,
        "lambda_perceptual": 0.15,
        "lambda_attention": 0.05
      }
    }
  },
  "training_configs": {
    "test": {
      "epochs": 5,
      "batch_size": 4,
      "learning_rate": 0.0002,
      "eval_frequency": 2,
      "save_frequency": 5,
      "max_samples": 100,
      "description": "Quick test configuration for debugging"
    },
    "development": {
      "epochs": 50,
      "batch_size": 16,
      "learning_rate": 0.0002,
      "eval_frequency": 5,
      "save_frequency": 10,
      "max_samples": 1000,
      "description": "Development configuration for experimentation"
    },
    "production": {
      "epochs": 200,
      "batch_size": 8,
      "learning_rate": 0.0001,
      "eval_frequency": 10,
      "save_frequency": 20,
      "max_samples": null,
      "gradient_accumulation_steps": 4,
      "mixed_precision": true,
      "scheduler": "cosine_annealing",
      "weight_decay": 0.0005,
      "early_stopping_patience": 25,
      "gradient_clip_norm": 1.0,
      "description": "Production training with progressive augmentation and regularization"
    }
  },
  "augmentation_configs": {
    "minimal": {
      "horizontal_flip_p": 0.3,
      "rotation_degrees": 0,
      "color_jitter": {
        "input": {"brightness": 0.05, "contrast": 0.05, "saturation": 0.05, "hue": 0.02},
        "target": {"brightness": 0.0, "contrast": 0.0, "saturation": 0.0, "hue": 0.0}
      },
      "cutout": {"size_ratio": 32, "p": 0.1},
      "noise": {"factor": 0.0, "p": 0.0},
      "blur": {"radius_range": [0.0, 0.0], "p": 0.0},
      "random_affine": {"degrees": 0, "translate": [0.0, 0.0], "scale": [1.0, 1.0], "p": 0.0}
    },
    "moderate": {
      "horizontal_flip_p": 0.6,
      "rotation_degrees": 0,
      "color_jitter": {
        "input": {"brightness": 0.12, "contrast": 0.10, "saturation": 0.12, "hue": 0.04},
        "target": {"brightness": 0.0, "contrast": 0.0, "saturation": 0.0, "hue": 0.0}
      },
      "cutout": {"size_ratio": 24, "p": 0.2},
      "noise": {"factor": 0.0, "p": 0.0},
      "blur": {"radius_range": [0.0, 0.0], "p": 0.0},
      "random_affine": {"degrees": 0, "translate": [0.0, 0.0], "scale": [1.0, 1.0], "p": 0.0}
    },
    "strong": {
      "horizontal_flip_p": 0.8,
      "rotation_degrees": 0,
      "color_jitter": {
        "input": {"brightness": 0.18, "contrast": 0.15, "saturation": 0.18, "hue": 0.06},
        "target": {"brightness": 0.0, "contrast": 0.0, "saturation": 0.0, "hue": 0.0}
      },
      "cutout": {"size_ratio": 20, "p": 0.3},
      "noise": {"factor": 0.0, "p": 0.0},
      "blur": {"radius_range": [0.0, 0.0], "p": 0.0},
      "random_affine": {"degrees": 0, "translate": [0.0, 0.0], "scale": [1.0, 1.0], "p": 0.0}
    }
  }
}
