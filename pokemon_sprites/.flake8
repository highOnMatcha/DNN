[flake8]
max-line-length = 79
ignore = E203, W503
max-complexity = 15
exclude = 
    __pycache__,
    *.pyc,
    .git,
    build,
    dist,
    .venv,
    venv,
    .pytest_cache

# Per-file ignores: Allow longer lines and import issues in test files only
per-file-ignores = 
    tests/*:E501,E402
    tests/**/*:E501,E402
